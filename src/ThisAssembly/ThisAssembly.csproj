<Project Sdk="Microsoft.Build.NoTargets">

  <PropertyGroup>
    <TargetFramework>netstandard1.0</TargetFramework>
    <IsPackable>true</IsPackable>
    <EnableDefaultItems>false</EnableDefaultItems>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>ThisAssembly</PackageId>
    <Description>Meta-package that includes all ThisAssembly.* packages.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NuGetizer" PrivateAssets="all" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Generators\ThisAssembly.AssemblyInfo\ThisAssembly.AssemblyInfo.csproj" />
    <ProjectReference Include="..\Generators\ThisAssembly.Metadata\ThisAssembly.Metadata.csproj" />
    <ProjectReference Include="..\Generators\ThisAssembly.Project\ThisAssembly.Project.csproj" />
    <ProjectReference Include="..\Generators\ThisAssembly.Strings\ThisAssembly.Strings.csproj" />
    <ProjectReference Include="..\Generators\ThisAssembly.Constants\ThisAssembly.Constants.csproj" />
    <ProjectReference Update="@(ProjectReference)"
                      PrivateAssets="none"
                      SkipGetTargetFrameworkProperties="true"
                      ReferenceOutputAssembly="false" />
  </ItemGroup>

</Project>
