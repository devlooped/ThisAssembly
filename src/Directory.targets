<Project>
  <!-- Extend Directory.Build.targets -->
  <PropertyGroup>
    <FortyTwo>0.9.5</FortyTwo>
    <RestoreSources Condition="Exists('$(MSBuildThisFileDirectory)..\..\nugetizer\bin\NuGetizer.42.42.42.nupkg')">
      $([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\..\nugetizer\bin'));
      https://api.nuget.org/v3/index.json
    </RestoreSources>
  </PropertyGroup>
  <ItemGroup Condition="Exists('$(MSBuildThisFileDirectory)..\..\nugetizer\bin\NuGetizer.42.42.42.nupkg')">
    <PackageReference Update="NuGetizer" Version="$(FortyTwo).$(FortyTwo).$(FortyTwo)" />
  </ItemGroup>

  <ItemGroup>
    <None Update="@(None)" CopyToOutputDirectory="PreserveNewest" />
    <EmbeddedResource Include="@(None -&gt; WithMetadataValue('Extension', '.sbntxt'))" />
    <None Update="@(None -&gt; WithMetadataValue('Extension', '.sbntxt'))" Pack="true" />

    <PackageFile Include="$(MSBuildThisFileDirectory)_._" PackagePath="lib/netstandard2.0/_._" />
    <PackageFile Include="*.props;*.targets" PackagePath="build\$(TargetFramework)\%(Filename)%(Extension)" Visible="true" />
  </ItemGroup>

</Project>