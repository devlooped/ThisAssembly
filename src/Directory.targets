<Project>
  <!-- Extend Directory.Build.targets -->

  <PropertyGroup>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
  </PropertyGroup>
  
  <ItemGroup Condition="'$(IsPackable)' == 'true'">
    <PackageFile Include="*.props;*.targets" PackagePath="build\%(Filename)%(Extension)" />
  </ItemGroup>

  <!--
    Suppress warning NU1507 while package mapping gets figured out
    https://github.com/dotnet/sdk/issues/25379
    https://docs.microsoft.com/en-us/nuget/consume-packages/package-source-mapping
  -->
  <PropertyGroup>
    <NoWarn>$(NoWarn);NU1507</NoWarn>
  </PropertyGroup>

</Project>
